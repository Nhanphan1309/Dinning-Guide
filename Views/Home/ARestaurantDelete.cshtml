@model Dinning_Guide.Models.Restaurant.Restaurant

@{
    ViewBag.Title = "Restaurant Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="delete">
    <div class="container">
        <h2>Delete</h2>

        <h3>Are you sure you want to delete this?</h3>
        <div>
            <h4>All rating and review on this restaurant and the restaurant will be deleted</h4>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Delete" class="btn action-button" /> |
                </div>
            }
            @Html.ActionLink("Back to List", "ARestaurantManage")
        </div>
    </div>
</div>
